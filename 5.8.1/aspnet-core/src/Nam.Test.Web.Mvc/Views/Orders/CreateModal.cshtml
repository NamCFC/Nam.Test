@using Nam.Test.Web.Models.Common.Modals
@model Nam.Test.Web.Models.Orders.CreateOrderViewModel
@{ Layout = null; }
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewOrder")))
<form name="OrderCreateForm" role="form" class="form-horizontal">
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">Product</label>
            <div class="col-md-9">
                <select class="form-control" name="ProductId" asp-items="@Model.GetProducts()" required>
                </select>
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">Customer</label>
            <div class="col-md-9">
                <select class="form-control" name="CustomerId" asp-items="@Model.GetCustomers()" required>
                </select>
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">Order Date</label>
            <div class="col-md-9">
                <input type="date" class="form-control" name="OrderDate" required>
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">Amount</label>
            <div class="col-md-9">
                <input type="number" class="form-control" name="Amount" min="1" required>
            </div>
        </div>

    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

